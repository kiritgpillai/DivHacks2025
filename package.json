{
  "name": "market-mayhem",
  "version": "1.0.0",
  "description": "Portfolio-building game with multi-agent AI system where players compete against a trash-talking Villain AI",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && uvicorn main:app --reload --port 8000",
    "build": "npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "start": "npm run start:frontend",
    "start:frontend": "cd frontend && npm start",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && pip install -r requirements.txt",
    "setup": "npm run install:all"
  },
  "keywords": [
    "portfolio",
    "trading",
    "ai",
    "langgraph",
    "multi-agent",
    "behavioral-finance"
  ],
  "author": "DivHacks2025",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}

